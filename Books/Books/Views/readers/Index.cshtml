@model IEnumerable<Books.reader>

@{
    ViewBag.Title = "Index";
}

<h2>Readers:</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Address</th>
        <th>Disposal Mark</th>
        <th>Phone Number</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name_reader)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.surName_reader)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address_reader)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark_disposal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNum)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ticket_number }) |
            @Html.ActionLink("Details", "Details", new { id=item.ticket_number }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ticket_number })
        </td>
    </tr>
}

</table>
